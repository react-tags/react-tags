{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",                       
    "moduleResolution": "node",
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true,
    "target": "ESNext",                                  
    "module": "commonjs",                                
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "**/__tests__/*", "__mocks__/*",  "dev-docs", "coverage"]
}
